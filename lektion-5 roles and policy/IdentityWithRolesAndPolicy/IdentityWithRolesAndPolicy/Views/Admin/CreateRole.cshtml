@model IdentityRole

<h1>Create Role</h1>
<div class="mt-5">
    <form method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Add Role</button>

    </form>

</div>