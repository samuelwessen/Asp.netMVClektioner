@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<form class="row g-3" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="col-md-6">
        <label asp-for="Input.FirstName" class="form-label"></label>
        <input asp-for="Input.FirstName" class="form-control" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.LastName" class="form-label"></label>
        <input asp-for="Input.LastName" class="form-control" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="Input.AddressLine" class="form-label"></label>
        <input asp-for="Input.AddressLine" class="form-control" />
    </div>
    <div class="col-md-5">
        <label asp-for="Input.ZipCode" class="form-label"></label>
        <input asp-for="Input.ZipCode" class="form-control" />
    </div><div class="col-md-7">
        <label asp-for="Input.City" class="form-label"></label>
        <input asp-for="Input.City" class="form-control" />
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Registrera</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
